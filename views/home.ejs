<%- include("partials/header") -%>

<div class="jumbotron">
  <h1>Home</h1>
  <p><%= homeContent %></p>
</div>

  <% homePosts.forEach(function(post){ %>
    <div class="jumbotron">
      <h2><%= post.title %></h2>
      <% if(post.content.length>120){ %>
        <p><%= post.content.slice(0, 120)%>...
        <a href="/posts/<%= post._id %>">Read More</a></p>
      <% }else{ %>
        <p><%= post.content %></p>
      <% } %>
        </div>
  <% }); %>





<%- include("partials/footer") -%>
